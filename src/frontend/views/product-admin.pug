doctype html
html(lang="en")
    include ./head.pug
    body 
        header
            div.logo
                a(href="../index.pug")
                    img(src="/static/gato-negro.png", alt="Cat-shop logo")
                h1.titulo Cat-shop
        div.uploadProduct
            a(type="button", class= "button", href= "./create-product") Upload product
        main
            div.product-container
                each result in results
                    div.product
                        h3#product_name= `${result.name}`
                        h4#product_price= `$${result.unit_price}`
                        h4#stock= `Units in stock: ${result.units_in_stock}`
                        a(type="button", class= "button", href= `./update-product/${result.id}`) Update product
                        button#delete_product(class= "button", data-product-id= result.id) Delete product
        script(src= "/static/product.script.js", type= "module")
        include ./footer.pug
    